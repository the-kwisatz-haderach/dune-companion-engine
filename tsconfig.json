{
  "compilerOptions": {
    "outDir": "lib",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "CommonJS",
    "target": "ES5",
    "allowJs": true,
    "removeComments": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "lib": ["ES2015", "DOM"],
    "typeRoots": [
      "node_modules/@types"
  ],
    "types": ["node", "jest"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/*.test.ts", "**/__tests__/**"]
}
